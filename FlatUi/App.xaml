             StartupUri="MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/WindowChromeButtons.xaml"/>
                <ResourceDictionary Source="Resources/Buttons.xaml"/>
